  name = Sebastian Bolanos
  signingkey = 8FD19580EB2B286C8FEA5407B7E9320FDC065EA1
[core]
  edit = vim
  editor = vim
  pager = delta --plus-color="#1f6a25" --plus-emph-color="#4fdc6e" --minus-color="#a87f80" --minus-emph-color="#ce0003"
[init]
  defaultBranch = master
  
[interactive]
  diffFilter = delta --color-only

[color]
  diff = true
  status = true
  branch = true
  interactive = true
	ui = true
  pager = true
[pager]
  branch = false
  log = true
[merge]
  tool = meld
[diff]
  guitool = meld
[commit]
  #gpgsign = true
[credential]
	username = sbc64
	helper = store
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	ap = -c interactive.diffFilter=\"diff-so-fancy --color-words\" add -p
[pull]
	ff = only
[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
